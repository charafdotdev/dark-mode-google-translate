{
  "manifest_version": 2,
  "name": "Dark Mode for Google Translate™",
  "version": "2.0.0",
  "description": "Perfect #242424 dark theme for Google Translate – zero flash, pro shadows, 2025-proof.",
  "author": "Charaf Dev",
  "homepage_url": "https://charaf.dev",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [{
    "matches": ["*://translate.google.com/*", "*://translate.googleusercontent.com/*"],
    "css": ["preload.css", "dark-mode.css"],
    "js": ["dark-mode.js"],
    "run_at": "document_start"
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "dark-mode-google-translate@charafdev",
      "strict_min_version": "109.0"
    }
  }
}